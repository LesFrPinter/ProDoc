<Window x:Class="ProDocEstimate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProDocEstimate"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="750" Width="1200">

	<Grid Background="Beige">

		<Grid.RowDefinitions>
			<RowDefinition Height="60" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Menu>
			<MenuItem Header="File" Height="40">
				<MenuItem x:Name="mnuFileExit" Header="Exit" Click="mnuFileExit_Click" />
			</MenuItem>
			<MenuItem x:Name="mnuQuotations" Header="Quotations" Height="40" Click="mnuQuotations_Click" />
			<MenuItem x:Name="mnuCustomers"  Header="Customers"  Height="40" Click="mnuCustomers_Click"  />
			<MenuItem x:Name="mnuItems"      Header="Items"      Height="40" Click="mnuItems_Click"      />
			<MenuItem Header="Print" Height="40" />
		</Menu>

		<Image Grid.Row="1" Source="/Images/PDS-logo-lrg.png" >
			<Image.Effect>
				<DropShadowEffect Direction="25" Color="#FFB6C2CB" ShadowDepth="7" BlurRadius="4" />
			</Image.Effect>
		</Image>

			<Label Grid.Row="2" Content="Pro Doc Estimator" Padding="10" >
				<Label.Effect>
					<DropShadowEffect Direction="325" Color="black" ShadowDepth="12" BlurRadius="12" />
				</Label.Effect>
			</Label>

	</Grid>

</Window>