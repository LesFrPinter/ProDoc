<Window x:Class="ProDocEstimate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProDocEstimate"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="750" Width="1200">

	<Window.Resources>

		<Style TargetType="MenuItem">
			<Setter Property="FontSize" Value="18" />
			<Setter Property="Foreground" Value="Blue" />
		</Style>

	</Window.Resources>

	<Grid Background="Beige" Margin="0,-3,0,3">

		<Grid.RowDefinitions>
			<RowDefinition Height="60" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!--Set MenuDropAlignment to 0 in RegEdit-->

		<Menu HorizontalContentAlignment="Left">
			<MenuItem Header="_File" Height="40">
				<MenuItem  FlowDirection="RightToLeft" x:Name="mnuFileExit" Header="E_xit" Click="mnuFileExit_Click" />
			</MenuItem>
			<MenuItem Header="_Demos">
				<MenuItem x:Name="mnuQuotations" Header="_Quotations" Height="40" Click="mnuQuotations_Click" />
				<MenuItem x:Name="mnuCustomers"  Header="_Customers"  Height="40" Click="mnuCustomers_Click"  />
				<MenuItem x:Name="mnuItems"      Header="_Items"      Height="40" Click="mnuItems_Click"      />
				<MenuItem Header="Print" Height="40" />
			</MenuItem>
			<MenuItem Header="_Current system" Height="40" >
				<MenuItem x:Name="mnuEdit"  Header="_Edit an existing estimate" Click="mnuEdit_Click" />
				<MenuItem x:Name="mnuCopy"  Header="_Copy an existing estimate" Click="mnuCopy_Click" />
				<MenuItem x:Name="mnuBlank" Header="New _blank estimate"        Click="mnuBlank_Click" />
				<MenuItem x:Name="mnuCombo" Header="New c_ombo estimate"        Click="mnuCombo_Click" />

				<!--<MenuItem x:Name="mnuPV01" Header="PV01" Height="40" Click="mnuPV01_Click" />
				<MenuItem x:Name="mnuPV02" Header="PV02" Height="40" Click="mnuPV02_Click" />
				<MenuItem x:Name="mnuStandards" Header="Standards" Height="40" Click="mnuStandards_Click"/>
				<MenuItem x:Name="mnuNewEstimate" Header="New Estimate" Height="40" Click="mnuNewEstimate_Click" />-->
			</MenuItem>
		</Menu>

		<Image Grid.Row="1" Source="/Images/PDS-logo-lrg.png" Height="80" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30" />

		<!--<TextBlock Grid.Row="1" Text="Pro Vision II" VerticalAlignment="Bottom" Foreground="White" FontSize="56" Margin="0 0 0 10" HorizontalAlignment="Center" FontWeight="Bold" Padding="10" Background="Red" >
			<TextBlock.Effect>
				<DropShadowEffect ShadowDepth="12" Direction="330" Color="Black" Opacity="0.8" BlurRadius="10" />
			</TextBlock.Effect>
		</TextBlock>-->

		<Label Grid.Row="2" Content="Pro Vision II" Padding="20 5 20 5" FontFamily="Comic Sans MS" Style="{StaticResource MainTitle}"  >
			<Label.Effect>
				<DropShadowEffect Direction="325" Color="black" ShadowDepth="12" BlurRadius="12" />
			</Label.Effect>
				<Label.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="5"/>
						<Style.Triggers>
							<Trigger Property="IsMouseDirectlyOver" Value="True">
								<Setter Property="Background" Value="Red" />
							</Trigger>
						</Style.Triggers>
					</Style>
				</Label.Resources>
			</Label>

	</Grid>

</Window>