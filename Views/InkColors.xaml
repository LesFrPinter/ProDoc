<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProDocEstimate.Views"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="ProDocEstimate.Views.InkColors"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        Title="Ink Colors" Height="240" Width="800">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Margin" Value="2 0" />
            <Setter Property="Padding" Value="2 0" />
        </Style>
        <Style TargetType="telerik:RadNumericUpDown">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Margin"   Value="4" />
            <Setter Property="Height"   Value="20" />
            <Setter Property="Width"    Value="20" />
            <Setter Property="Grid.Row" Value="2" />
            <Setter Property="NumberDecimalDigits" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    
    <Viewbox>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="20" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label FontSize="22" Foreground="Red" Content="Ink Colors" Width="100" Grid.ColumnSpan="8" HorizontalAlignment="Center" Padding="2 0" Margin="0" >
                <Label.BitmapEffect>
                    <DropShadowBitmapEffect ShadowDepth="5" Direction="260" Opacity="75" />
                </Label.BitmapEffect>
            </Label>

            <Label Content="Max Colors"   Grid.Row="1" Grid.Column="0" FontSize="10" />
            <Label Content="Std"          Grid.Row="1" Grid.Column="1" FontSize="10" />
            <Label Content="Black Std"    Grid.Row="1" Grid.Column="2" FontSize="10" />
            <Label Content="PMS"          Grid.Row="1" Grid.Column="3" FontSize="10" />
            <Label Content="Desensitized" Grid.Row="1" Grid.Column="4" FontSize="10" />
            <Label Content="Split"        Grid.Row="1" Grid.Column="5" FontSize="10" />
            <Label Content="Thermo"       Grid.Row="1" Grid.Column="6" FontSize="10" />
            <Label Content="Backer"       Grid.Row="1" Grid.Column="7" FontSize="10" />

            <Label Content="{Binding MaxColors}" Grid.Row="2" Foreground="red" Height="16"  />
            <telerik:RadNumericUpDown Grid.Column="1" x:Name="Std1"     Minimum="0" Maximum="1" ValueChanged="RadNumericUpDown_ValueChanged" Value="{Binding Std,       UpdateSourceTrigger=PropertyChanged}" />
            <telerik:RadNumericUpDown Grid.Column="2" x:Name="BlkStd1"  Minimum="0" Maximum="1" ValueChanged="RadNumericUpDown_ValueChanged" Value="{Binding BlackStd,  UpdateSourceTrigger=PropertyChanged}" />
            <telerik:RadNumericUpDown Grid.Column="3" x:Name="PMS1"     Minimum="0" Maximum="1" ValueChanged="RadNumericUpDown_ValueChanged" Value="{Binding PMS,       UpdateSourceTrigger=PropertyChanged}" />
            <telerik:RadNumericUpDown Grid.Column="4" Value="{Binding Desentized}"/>
            <telerik:RadNumericUpDown Grid.Column="5" Value="{Binding Split}"     />
            <telerik:RadNumericUpDown Grid.Column="6" Value="{Binding Thermo}"    />
            <telerik:RadNumericUpDown Grid.Column="7" Value="{Binding Backer}"    />

            <Label Grid.Row="3" Grid.Column="2" Content="Total:" HorizontalAlignment="Right" />
            <Label Grid.Row="3" Grid.Column="3" Content="{Binding Total, StringFormat=C2}" HorizontalAlignment="Left" HorizontalContentAlignment="Right" />

            
            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="3" HorizontalAlignment="Center">
                <Button x:Name="btnSave"   Content="Save"   Padding="6 2" VerticalAlignment="Bottom" Click="btnSave_Click" />
                <Button x:Name="btnCancel" Content="Cancel" Padding="6 2" VerticalAlignment="Bottom" Click="btnCancel_Click"/>
            </StackPanel>

        </Grid>

    </Viewbox>

</Window>