								Background="LightGray"
								FontFamily="Courier New"
								FontSize="13"
								IsSynchronizedWithCurrentItem="True">
								<DataGrid.Columns>
									<DataGridTextColumn
										Width="65"
										Binding="{Binding Path=SEQ}"
										ElementStyle="{StaticResource CellRightAlign}"
										Header="SEQ" />
									<DataGridTextColumn
										Width="340"
