										Grid.Column="1"
										Grid.ColumnSpan="2"
										Width="100"
										Height="26"
										Margin="160,0,0,0"
										HorizontalAlignment="Left"
										VerticalAlignment="Center">
										<ComboBoxItem Content="Size 1" />
										<ComboBoxItem Content="Size 2" IsSelected="True" />
										<ComboBoxItem Content="Size 3" />
									</ComboBox>

									<Label
										Grid.Row="5"
										Grid.Column="1"
										Margin="10,0,0,0"
										HorizontalAlignment="Left"
										VerticalAlignment="Top"
										Content="(Length)" />
									<Label
										Grid.Row="5"
										Grid.Column="1"
										Grid.ColumnSpan="2"
										Margin="160,0,0,0"
										HorizontalAlignment="Left"
										VerticalAlignment="Top"
										Content="(Cylinder)" />

									<Label Grid.Row="6" Content="Standard" />
									<ComboBox
										Grid.Row="6"
										Grid.Column="1"
										Grid.ColumnSpan="2"
										Width="60"
										Height="26"
										Margin="10,0,0,0"
										HorizontalAlignment="Left"
										VerticalAlignment="Center">
										<ComboBoxItem Content="01" IsSelected="True" />
										<ComboBoxItem Content="02" />
										<ComboBoxItem Content="03" />
									</ComboBox>

									<Label
										Grid.Row="6"
										Grid.Column="1"
										Margin="0,0,0,0"
										Content="Product Code" />

									<TextBox
										x:Name="txtProductCode"
										Grid.Row="6"
										Grid.Column="2"
										Width="100"
										Height="26"
										Margin="10,0,0,0"
										HorizontalAlignment="Left"
										VerticalAlignment="Center"
										VerticalContentAlignment="Center"
										MouseDoubleClick="txtProductCode_MouseDoubleClick" />

									<Button
										x:Name="btnBaseCharges"
										Grid.Row="6"
										Grid.Column="4"
										Width="125"
										Height="26"
										Background="Green"
										Click="btnBaseCharges_Click"
										Foreground="White">
										<AccessText>_Apply Base Charge</AccessText>
									</Button>

								</Grid>

							</Grid>

						</Grid>

					</TabItem>

					<TabItem>
						<TabItem.Header>

							<Border
								BorderBrush="Gray"
								BorderThickness="1,1,1,0"
								CornerRadius="5">
								<Border
									Height="35"
									Margin="2"
									HorizontalAlignment="Left"
									Background="Green"
									BorderBrush="Gray"
									CornerRadius="5">
									<Label
										BorderThickness="1"
										Content=" Detail"
										Foreground="Gainsboro" />
								</Border>
							</Border>

						</TabItem.Header>

						<Grid>

							<Grid.RowDefinitions>
								<RowDefinition Height="32" />
								<RowDefinition />
