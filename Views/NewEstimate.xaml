										VerticalAlignment="Center">
										<ComboBoxItem Content="Size 1" />
										<ComboBoxItem Content="Size 2" />
										<ComboBoxItem Content="Size 3" IsSelected="True" />
									</ComboBox>

									<Label
										Grid.Row="4"
										Grid.Column="1"
										Margin="120,0,0,0"
										HorizontalAlignment="Left"
										Content=" X " />

									<ComboBox
