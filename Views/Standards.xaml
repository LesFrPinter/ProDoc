<Window x:Class="ProDocEstimate.Views.Standards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProDocEstimate.Views"
        mc:Ignorable="d"
        Title="Standards" 
        WindowStartupLocation="CenterOwner"
        Height="750" Width="900">

	<Window.Resources>
		<Style TargetType="Label">
			<Setter Property="Foreground" Value="Green" />
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="Padding" Value="3" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="Margin" Value="0 0 10 0" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="HorizontalAlignment" Value="Right" />
		</Style>

		<Style TargetType="TextBox">
			<Setter Property="Foreground" Value="Black" />
			<Setter Property="Background" Value="LightYellow" />
			<Setter Property="Padding" Value="3" />
			<Setter Property="FontSize" Value="12" />
			<Setter Property="FontFamily" Value="Courier New" />
			<Setter Property="Margin" Value="0 1 10 1" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Style.Triggers>
				<Trigger Property="IsFocused" Value="True">
					<Setter Property="Background" Value="Blue"/>
					<Setter Property="Foreground" Value="White"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<TabControl Margin="10">
		<TabItem Header="Standard Page _1" >

			<Grid Background="LightGray">
				<Grid.RowDefinitions >
					<RowDefinition Height="*" />
					<RowDefinition Height="10*" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Grid Grid.Row="0" Grid.Column="0" Margin="10" >

					<Label Margin="10 0 0 0" Content="STANDARD #" Background="DarkGray" HorizontalAlignment="Left" FontSize="14" Height="24" />
					<TextBox x:Name="txtStandardNum" Margin="110 2 0 2" Width="25" Text="01" Height="34" 
			 HorizontalAlignment="Left" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>

					<Label Margin="150 0 0 0" Content="PRESS #" Background="DarkGray" HorizontalAlignment="Left" FontSize="14" Height="24" />
					<TextBox x:Name="txtPressNum" Margin="220 2 0 2" Width="25" Text="12" Height="24" 
			 HorizontalAlignment="Left" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>

					<Label Margin="260 0 0 0" Content="Description" Background="DarkGray" HorizontalAlignment="Left" FontSize="14" Height="26" />
					<TextBox x:Name="txtDescription" Margin="350 2 0 2" Width="320" Text="12 MVP" Height="24" 
			 HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>

				</Grid>

				<Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" >
					<Grid.RowDefinitions>
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
						<RowDefinition Height="30" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="2*" />
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="2*" />
						<ColumnDefinition Width="2*" />
						<ColumnDefinition Width="2*" />
					</Grid.ColumnDefinitions>

					<Label Grid.Row="0" Grid.Column="0" Content="Web"  />
					<TextBox Grid.Row="0" Grid.Column="1" Width="30" Text="12" />
					<Label Grid.Row="0" Grid.Column="2" Content="COST $/hr"  />
					<TextBox Grid.Row="0" Grid.Column="3" Width="90" Text="75.00" HorizontalContentAlignment="Right" />

					<Label Grid.Row="0" Grid.Column="4" Content="Base Speed:" Background="DarkGray" Foreground="LightGray" />
					<TextBox Grid.Row="0" Grid.Column="7" Width="80" Text="265" HorizontalContentAlignment="Right" />

					<Label Grid.Row="1" Grid.Column="0" Content="Web-frac"  />
					<TextBox Grid.Row="1" Grid.Column="1" Width="90" Text="12"    HorizontalContentAlignment="Right" />
					<Label Grid.Row="1" Grid.Column="2" Content="SELL $/hr"  />
					<TextBox Grid.Row="1" Grid.Column="3" Width="90" Text="75.00" HorizontalContentAlignment="Right" />

					<Label Grid.Row="2" Grid.Column="0" Content="Width"  />
					<TextBox Grid.Row="2" Grid.Column="1" Width="90" Text="18.0"  HorizontalContentAlignment="Right" />

					<Label Grid.Row="3" Grid.Column="0" Content="Towers"  />
					<TextBox Grid.Row="3" Grid.Column="1" Width="30" Text="4"     HorizontalContentAlignment="Right" />

					<Label Grid.Row="4" Grid.Column="0" Content="Variable"  />
					<TextBox Grid.Row="4" Grid.Column="1" Width="30" Text=""     HorizontalContentAlignment="Right" />

					<Label Grid.Row="5" Grid.Column="0" Content="Restrict to"  />
					<TextBox Grid.Row="5" Grid.Column="1" Width="30" Text=""     HorizontalContentAlignment="Right" />

					<Label Grid.Row="6" Grid.Column="0" Content="Folder/Sheeter Slowdown" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10 0 0 0" />
					<TextBox Grid.Row="6" Grid.Column="2" Width="60" Text="88" HorizontalContentAlignment="Right" />

					<Label Grid.Row="7"   Grid.Column="0" Content="ECL: Setup" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10 0 0 0" />
					<TextBox Grid.Row="7" Grid.Column="1" Width="80" Text="110.10" HorizontalContentAlignment="Right" VerticalAlignment="Bottom" />

					<Label Grid.Row="7"   Grid.Column="1" Content="Run" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="100 0 0 0" />
					<TextBox Grid.Row="7" Grid.Column="1" Width="80"    Text="110.10" HorizontalContentAlignment="Right" VerticalAlignment="Bottom" Margin="140 0 0 0" Grid.ColumnSpan="2" />

					<Label Grid.Row="7"   Grid.Column="3" Content="Matl" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0 0 0 0" />
					<TextBox Grid.Row="7" Grid.Column="3" Width="80"    Text="802.20" HorizontalContentAlignment="Right" VerticalAlignment="Bottom" Margin="40 0 0 0" Grid.ColumnSpan="2" />

				</Grid>

			</Grid>
		</TabItem>
		<TabItem Header="Standards Page _2" >
		</TabItem>
		<TabItem Header="Standards Page _3" >
		</TabItem>
	</TabControl>

</Window>