<Window
	x:Class="ProDocEstimate.Quotations"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ProDocEstimate"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="Quotations"
	Width="900"
	Height="750"
	WindowStartupLocation="CenterOwner"
	mc:Ignorable="d">

	<Window.Resources>
		<Style x:Key="TextField" TargetType="TextBox">
			<Setter Property="Height" Value="24" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Setter Property="Margin" Value="10 0 0 0" />
		</Style>
	</Window.Resources>
	<Viewbox>

		<Grid Background="LightGray">

			<Grid.RowDefinitions>
				<RowDefinition Height="55" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Border
				Width="160"
				HorizontalAlignment="Left"
				Background="Purple"
				BorderThickness="2"
				CornerRadius="10">
				<Label
					Width="138"
					Margin="10,0,0,0"
					Padding="10"
					HorizontalAlignment="Left"
					Background="purple"
					Content="Quotations"
					FontSize="24"
					Foreground="White" />
			</Border>

			<Border
				Grid.RowSpan="2"
				Grid.Column="0"
				Width="100"
				Height="52"
				Margin="0,0,10,0"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Background="Purple"
				BorderThickness="2"
				CornerRadius="10">
				<Label
					x:Name="lblPageName"
					Grid.RowSpan="2"
					Width="auto"
					Height="40"
					Margin="10,0,0,0"
					Padding="5"
					HorizontalAlignment="Center"
					Background="Purple"
					Content="{Binding Path=ActivePage, Mode=OneWayToSource}"
					FontSize="24"
					Foreground="White" />
			</Border>

			<TabControl
				x:Name="Tabs"
				Grid.Row="1"
				Grid.RowSpan="2"
				Background="LightGray"
				SelectedIndex="0"
				SelectionChanged="Tabs_SelectionChanged">

				<TabItem FontSize="16" Header="    Page 1    " >

					<Grid Height="570">

						<Grid.RowDefinitions>
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>

						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<StackPanel Grid.ColumnSpan="3" Orientation="Horizontal">
							<Label
								Content="  Customer: "
								FontSize="18"
								FontWeight="bold"
								Foreground="blue" />
							<Button
								x:Name="btnNew"
								Height="24"
								Padding="10,2"
								Click="btnNew_Click">
								New
							</Button>
							<Button
								x:Name="btnLookup"
								Height="24"
								Padding="10,2"
								Click="btnLookup_Click">
								Lookup or copy
							</Button>
						</StackPanel>

						<Label
							Grid.Row="1"
							HorizontalAlignment="Right"
							Content="Customer Name:" />
						<TextBox
							x:Name="txtCustomerName"
							Grid.Row="1"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Width="266"
							Margin="10,0,0,0"
							Style="{StaticResource TextField}"
							Text="{Binding CustomerName}" />

						<TextBox
							x:Name="txtCustomerNum"
							Grid.Row="1"
							Grid.Column="2"
							Grid.ColumnSpan="2"
							Width="65"
							Margin="154,0,0,0"
							MouseDoubleClick="txtCustomerNum_MouseDoubleClick"
							Style="{StaticResource TextField}" />

						<Label
							Grid.Row="1"
							Grid.Column="3"
							Margin="5,0,0,0"
							HorizontalAlignment="Left"
							Content="Num:" />

						<CheckBox
							Grid.Row="1"
							Grid.Column="3"
							Margin="140,0,0,0"
							VerticalAlignment="Center"
							Content="Prospect" />

						<Label
							Grid.Row="2"
							HorizontalAlignment="Right"
							Content="Contact:" />
						<TextBox
							x:Name="txtLocation"
							Grid.Row="2"
							Grid.Column="1"
							Grid.ColumnSpan="3"
							Width="390"
							Style="{StaticResource TextField}"
							Text="{Binding Location}" />

						<Label
							Grid.Row="3"
							HorizontalAlignment="Right"
							Content="Location:" />
						<TextBox
							x:Name="txtLocation1"
							Grid.Row="3"
							Grid.Column="1"
							Grid.ColumnSpan="3"
							Width="390"
							Style="{StaticResource TextField}"
							Text="{Binding Address}" />

						<Label
							Grid.Row="4"
							HorizontalAlignment="Right"
							Content="Phone:" />
						<TextBox
							x:Name="txtCity"
							Grid.Row="4"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Width="270"
							Margin="10,1,0,0"
							VerticalAlignment="Top"
							Style="{StaticResource TextField}"
							Text="{Binding City}" />

						<Label
							Grid.Row="5"
							HorizontalAlignment="Right"
							Content="Email:" />
						<TextBox
							x:Name="txtContactName"
							Grid.Row="5"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Width="270"
							Margin="10,2,0,5"
							Style="{StaticResource TextField}"
							Text="{Binding ContactName}" />

						<StackPanel
							Grid.Row="7"
							Grid.Column="0"
							Grid.ColumnSpan="3"
							Margin="10,0,0,0"
							Orientation="Horizontal">
							<Button
								Height="24"
								Padding="10,2"
								Content="New quote" />
							<Button
								x:Name="btnCopy"
								Height="24"
								Padding="10,2"
								Click="btnCopy_Click"
								Content="Copy a previous quote" />
						</StackPanel>

						<TextBlock
							Grid.Row="5"
							Grid.RowSpan="4"
							Grid.Column="3"
							Grid.ColumnSpan="1"
							Padding="10"
							Width="400"
							Background="LightYellow"
							TextWrapping="Wrap">
							It seems that if they're copying a previous quote,
							they won't do a customer lookup, so the implied
							logic of this screen might be confusing.
							I recommend a different layout to reflect the two
							ways to either enter a new quote or select an existing one.
						</TextBlock>

						<Label
							Grid.Row="8"
							HorizontalAlignment="Right"
							Content="Project Type:" />
						<ComboBox
							x:Name="cmbProjectType"
							Grid.Row="8"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Width="200"
							Margin="0,2,0,5"
							Foreground="Black"
							Text="{Binding ProjectType}">
							<ComboBoxItem Content="First type" IsSelected="True" />
							<ComboBoxItem Content="Second type" />
							<ComboBoxItem Content="Third type" />
						</ComboBox>

						<Label
							Grid.Row="9"
							HorizontalAlignment="Right"
							Content="Parts:" />
						<xctk:IntegerUpDown
							x:Name="PartsSpinner"
							Grid.Row="9"
							Grid.Column="1"
							Width="50"
							Margin="0,4,0,4"
							HorizontalAlignment="Left"
							Maximum="12"
							Minimum="1"
							Text="1" />

						<Label
							Grid.Row="10"
							HorizontalAlignment="Right"
							Content="Paper Type:" />
						<ComboBox
							x:Name="cmbPaperType"
							Grid.Row="10"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Width="180"
							Margin="0,2,0,5"
							Text="{Binding ProjectType}">
							<ComboBoxItem Content="First type" IsSelected="True" />
							<ComboBoxItem Content="Second type" />
							<ComboBoxItem Content="Third type" />
						</ComboBox>

						<Label
							Grid.Row="11"
							HorizontalAlignment="Right"
							Content="Roll Width:" />
						<ComboBox
							x:Name="cmbRollWidth"
							Grid.Row="11"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Width="180"
							Margin="0,2,0,5"
							Text="{Binding RollWidth}">
							<ComboBoxItem Content="11 1/2&quot;" IsSelected="True" />
							<ComboBoxItem Content="14 7/8&quot;" />
							<ComboBoxItem Content="Other width" />
						</ComboBox>

						<Label
							Grid.Row="12"
							HorizontalAlignment="Right"
							Content="Press Size:" />
						<ComboBox
							x:Name="cmbPressSize"
							Grid.Row="12"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Width="180"
							Margin="0,2,0,5"
							Text="{Binding PressSize}">
							<ComboBoxItem Content="Small" IsSelected="True" />
							<ComboBoxItem Content="Medium" />
							<ComboBoxItem Content="Large" />
						</ComboBox>

						<Label
							Grid.Row="13"
							HorizontalAlignment="Right"
							VerticalContentAlignment="Center"
							Content="Lineholes out:" />
						<StackPanel
							Grid.Row="13"
							Grid.Column="1"
							VerticalAlignment="Center"
							Orientation="Horizontal">
							<RadioButton Content="Yes" IsChecked="True" />
							<RadioButton Content="No" />
						</StackPanel>

						<Label
							Grid.Row="14"
							HorizontalAlignment="Right"
							Content="Collator cut size:" />
						<TextBox
							x:Name="txtCCS"
							Grid.Row="14"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Width="65"
							Margin="0,0,0,0"
							Style="{StaticResource TextField}" />

						<Label
							Grid.Row="15"
							HorizontalAlignment="Right"
							Content="Final Size:" />
						<ComboBox
							x:Name="cmbFinalSize"
							Grid.Row="15"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Width="180"
							Margin="0,2,0,5"
							Text="{Binding FinalSize}">
							<ComboBoxItem Content="Small" IsSelected="True" />
							<ComboBoxItem Content="Medium" />
							<ComboBoxItem Content="Large" />
						</ComboBox>

						<Button
							x:Name="btnBaseCharge"
							Grid.Row="13"
							Grid.Column="3"
							Height="24"
							Padding="10,2"
							Click="btnBaseCharge_Click"
							Content="Base Charge"
							ToolTip="What is this?" />

					</Grid>

				</TabItem>

				<TabItem FontSize="16" Header="    Page 2    ">

					<Grid Height="640">

						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
							<RowDefinition Height="30.75" />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>

						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Label
							Grid.Row="1"
							Grid.Column="4"
							Width="auto"
							HorizontalAlignment="Center"
							Content="Elements"
							FontWeight="Bold" />

						<Label
							Grid.Row="1"
							Margin="0,0,20,0"
							HorizontalAlignment="Right"
							Content="Qty" />

						<CheckBox
							Grid.Row="1"
							Grid.Column="1"
							Content="Exact" />
						<CheckBox
							Grid.Row="1"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Margin="70,0,0,0"
							Content="Use today's prices" />

						<Label
							Grid.Row="2"
							Grid.Column="0"
							Width="30"
							HorizontalAlignment="Left"
							Content=" 1" />
						<Label
							Grid.Row="3"
							Grid.Column="0"
							Width="30"
							HorizontalAlignment="Left"
							Content=" 2" />
						<Label
							Grid.Row="4"
							Grid.Column="0"
							Width="30"
							HorizontalAlignment="Left"
							Content=" 3" />
						<Label
							Grid.Row="5"
							Grid.Column="0"
							Width="30"
							HorizontalAlignment="Left"
							Content=" 4" />
						<Label
							Grid.Row="6"
							Grid.Column="0"
							Width="30"
							HorizontalAlignment="Left"
							Content=" 5" />
						<Label
							Grid.Row="7"
							Grid.Column="0"
							Width="30"
							HorizontalAlignment="Left"
							Content=" 6" />

						<TextBox
							Grid.Row="2"
							Grid.Column="0"
							Width="60"
							Margin="40,2,0,2"
							Style="{StaticResource TextField}"
							Text="{Binding Qty1, Mode=TwoWay, StringFormat=f2}" />
						<TextBox
							Grid.Row="3"
							Grid.Column="0"
							Width="60"
							Margin="40,2,0,2"
							Style="{StaticResource TextField}"
							Text="{Binding Qty2, Mode=TwoWay, StringFormat=f2}" />
						<TextBox
							Grid.Row="4"
							Grid.Column="0"
							Width="60"
							Margin="30,2,0,2"
							Text="   .  " />
						<TextBox
							Grid.Row="5"
							Grid.Column="0"
							Width="60"
							Margin="30,2,0,2"
							Text="   .  " />
						<TextBox
							Grid.Row="6"
							Grid.Column="0"
							Width="60"
							Margin="30,2,0,2"
							Text="   .  " />
						<TextBox
							Grid.Row="7"
							Grid.Column="0"
							Width="60"
							Margin="30,2,0,2"
							Text="   .  " />

