                                    <Label Content="Parts: " Width="120" />
                                    <TextBlock Text="{Binding PARTS}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Dollars per Hr: " Width="120" />
                                    <TextBlock Text="{Binding DollarsPerHr, StringFormat=C}" />
                                </StackPanel>

                            </StackPanel>

                        </Grid>

                    </Viewbox>

                </TabItem>

            </TabControl>

        </Grid>

    </Viewbox>

</Window>