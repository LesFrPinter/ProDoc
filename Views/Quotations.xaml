<Window
	x:Class="ProDocEstimate.Quotations"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ProDocEstimate"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="Quotations"
	Width="900"
	Height="750"
	WindowStartupLocation="CenterOwner"
	mc:Ignorable="d">

	<Window.Resources>
		<Style x:Key="TextField" TargetType="TextBox">
			<Setter Property="Height" Value="24" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Setter Property="Margin" Value="10,0,0,0" />
		</Style>

		<Style TargetType="{x:Type DataGridCell}">
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="pink"></Setter>
					<Setter Property="FontSize" Value="50"></Setter>
				</Trigger>
			</Style.Triggers>
		</Style>

	</Window.Resources>

	<Grid Background="LightGray">

		<Grid.RowDefinitions>
			<RowDefinition Height="55" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Border
			Width="160"
			HorizontalAlignment="Left"
			Background="Purple"
			BorderThickness="2"
			CornerRadius="10">
			<Label
				Width="138"
				Margin="10,0,0,0"
				Padding="10"
				HorizontalAlignment="Left"
				Background="purple"
				Content="Quotations"
				FontSize="24"
				Foreground="White" />
		</Border>

		<Border
			Grid.RowSpan="2"
			Grid.Column="0"
			Width="100"
			Height="52"
			Margin="0,0,10,0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Background="Purple"
			BorderThickness="2"
			CornerRadius="10">
			<Label
				x:Name="lblPageName"
				Grid.RowSpan="2"
				Width="auto"
				Height="40"
				Margin="10,0,0,0"
				Padding="5"
				HorizontalAlignment="Center"
				Background="Purple"
				Content="{Binding Path=ActivePage, Mode=OneWayToSource}"
				FontSize="24"
				Foreground="White" />
		</Border>

		<!--<Viewbox Grid.Row="1" Stretch="UniformToFill">-->

		<TabControl
			x:Name="Tabs"
			Grid.Row="1"
			Grid.RowSpan="2"
			Background="LightGray"
			SelectedIndex="0"
			SelectionChanged="Tabs_SelectionChanged">

			<TabItem FontSize="16" Header="    Page 1    ">

				<Grid Height="570">

					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>

					<Button
						Grid.Row="0"
						Height="24"
						Margin="95,0,0,0"
						Padding="10,2"
						HorizontalAlignment="Left"
						Content="New quote" />
					<Button
						x:Name="btnCopy"
						Grid.Row="0"
						Grid.Column="1"
						Height="24"
						Margin="6,5,0,0"
						Padding="4,2"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Click="btnCopy_Click"
						Content="Copy a previous quote" />

					<Label
						Grid.Row="2"
						Grid.RowSpan="2"
						Margin="4"
						Padding="0"
						VerticalAlignment="Top"
						Content="Project Type:" />

					<ComboBox
						x:Name="cmbProjectType"
						Grid.Row="2"
						Grid.Column="1"
						Width="170"
						Margin="0,4,0,4"
						HorizontalAlignment="Center"
						Foreground="Black"
						Text="{Binding ProjectType}" />

					<Label
						Grid.Row="3"
						Grid.Column="0"
						Margin="4"
						Padding="0"
						HorizontalAlignment="Right"
						Content="Final Size:" />

					<ComboBox
						x:Name="cmbFinalSizeInches1"
						Grid.Row="3"
						Grid.Column="1"
						Width="50"
						Height="24"
						Margin="4"
						FontFamily="Courier New"
						FontSize="11"
						SelectionChanged="cmbFinalSizeFrac1_SelectionChanged"
						Text="{Binding FinalSize}">
						<ComboBoxItem Content="1" />
						<ComboBoxItem Content="2" />
						<ComboBoxItem Content="3" />
						<ComboBoxItem Content="4" />
						<ComboBoxItem Content="5" />
						<ComboBoxItem Content="6" />
						<ComboBoxItem Content="7" />
						<ComboBoxItem Content="8" />
						<ComboBoxItem Content="9" />
						<ComboBoxItem Content="10" />
						<ComboBoxItem Content="11" />
						<ComboBoxItem Content="12" />
						<ComboBoxItem Content="13" />
						<ComboBoxItem Content="14" />
						<ComboBoxItem Content="15" />
						<ComboBoxItem Content="16" />
						<ComboBoxItem Content="17" />
					</ComboBox>

					<ComboBox
						x:Name="cmbFinalSizeFrac1"
						Grid.Row="3"
						Grid.Column="1"
						Width="90"
						Height="24"
						Margin="59,0,0,0"
						VerticalAlignment="Center"
						FontFamily="Courier New"
						FontSize="11"
						SelectionChanged="cmbFinalSizeFrac1_SelectionChanged"
						Text="{Binding FinalSize}">
						<ComboBoxItem Content="" />
						<ComboBoxItem Content="1/32" />
						<ComboBoxItem Content="1/16" />
						<ComboBoxItem Content="3/32" />
						<ComboBoxItem Content="1/8" />
						<ComboBoxItem Content="5/32" />
						<ComboBoxItem Content="3/16" />
						<ComboBoxItem Content="7/32" />
						<ComboBoxItem Content="1/4" />
						<ComboBoxItem Content="9/32" />
						<ComboBoxItem Content="5/16" />
						<ComboBoxItem Content="11/32" />
						<ComboBoxItem Content="3/8" />
						<ComboBoxItem Content="13/32" />
						<ComboBoxItem Content="7/16" />
						<ComboBoxItem Content="15/32" />
						<ComboBoxItem Content="1/2" />
						<ComboBoxItem Content="17/32" />
						<ComboBoxItem Content="9/16" />
						<ComboBoxItem Content="19/32" />
						<ComboBoxItem Content="5/8" />
						<ComboBoxItem Content="21/32" />
						<ComboBoxItem Content="11/16" />
						<ComboBoxItem Content="23/32" />
						<ComboBoxItem Content="3/4" />
						<ComboBoxItem Content="25/32" />
						<ComboBoxItem Content="13/16" />
						<ComboBoxItem Content="27/32" />
						<ComboBoxItem Content="7/8" />
						<ComboBoxItem Content="29/32" />
						<ComboBoxItem Content="15/16" />
						<ComboBoxItem Content="31/32" />
					</ComboBox>
					<Label
						Grid.Row="3"
						Grid.Column="1"
						Margin="156,0,0,0"
						HorizontalAlignment="Left"
						Content="X" />

					<ComboBox
						x:Name="cmbFinalSizeInches2"
						Grid.Row="3"
						Grid.Column="2"
						Width="50"
						Height="24"
						Margin="4,4,0,4"
						FontFamily="Courier New"
						FontSize="11"
						SelectionChanged="cmbFinalSizeFrac1_SelectionChanged"
						Text="{Binding FinalSize}">
						<ComboBoxItem Content="1" />
						<ComboBoxItem Content="2" />
						<ComboBoxItem Content="3" />
						<ComboBoxItem Content="4" />
						<ComboBoxItem Content="5" />
						<ComboBoxItem Content="6" />
						<ComboBoxItem Content="7" />
						<ComboBoxItem Content="8" />
						<ComboBoxItem Content="9" />
						<ComboBoxItem Content="10" />
						<ComboBoxItem Content="11" />
						<ComboBoxItem Content="12" />
						<ComboBoxItem Content="13" />
						<ComboBoxItem Content="14" />
						<ComboBoxItem Content="15" />
						<ComboBoxItem Content="16" />
						<ComboBoxItem Content="17" />
					</ComboBox>

					<ComboBox
						x:Name="cmbFinalSizeFrac2"
						Grid.Row="3"
						Grid.Column="2"
						Width="90"
						Height="24"
						Margin="68,0,0,0"
						VerticalAlignment="Center"
						FontFamily="Courier New"
						FontSize="11"
						SelectionChanged="cmbFinalSizeFrac1_SelectionChanged"
						Text="{Binding FinalSize}">
						<ComboBoxItem Content="" />
						<ComboBoxItem Content="1/32" />
						<ComboBoxItem Content="1/16" />
						<ComboBoxItem Content="3/32" />
						<ComboBoxItem Content="1/8" />
						<ComboBoxItem Content="5/32" />
						<ComboBoxItem Content="3/16" />
						<ComboBoxItem Content="7/32" />
						<ComboBoxItem Content="1/4" />
						<ComboBoxItem Content="9/32" />
						<ComboBoxItem Content="5/16" />
						<ComboBoxItem Content="11/32" />
						<ComboBoxItem Content="3/8" />
						<ComboBoxItem Content="13/32" />
						<ComboBoxItem Content="7/16" />
						<ComboBoxItem Content="15/32" />
						<ComboBoxItem Content="1/2" />
						<ComboBoxItem Content="17/32" />
						<ComboBoxItem Content="9/16" />
						<ComboBoxItem Content="19/32" />
						<ComboBoxItem Content="5/8" />
						<ComboBoxItem Content="21/32" />
						<ComboBoxItem Content="11/16" />
						<ComboBoxItem Content="23/32" />
						<ComboBoxItem Content="3/4" />
						<ComboBoxItem Content="25/32" />
						<ComboBoxItem Content="13/16" />
						<ComboBoxItem Content="27/32" />
						<ComboBoxItem Content="7/8" />
						<ComboBoxItem Content="29/32" />
						<ComboBoxItem Content="15/16" />
						<ComboBoxItem Content="31/32" />
					</ComboBox>

					<Label
						Grid.Row="3"
						Grid.Column="3"
						Width="auto"
						Height="22"
						Padding="0"
						Margin="0 0 0 5"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						VerticalContentAlignment="center"
						Content="(" />

					<Label
						x:Name="Decimal1"
						Grid.Row="3"
						Grid.Column="3"
						Width="70"
						Height="22"
						Padding="0"
						Margin="0 0 10 0"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						VerticalContentAlignment="center"
						Background="ivory" />

					<Label
						Grid.Row="3"
						Grid.Column="4"
						Width="auto"
						Height="22"
						Margin="10,0,0,0"
						Padding="0"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						VerticalContentAlignment="center"
						Content="X" />

					<Label
						x:Name="Decimal2"
						Grid.Row="3"
						Grid.Column="4"
						Width="70"
						Height="22"
						Margin="40,0,0,0"
						Padding="0"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						VerticalContentAlignment="center"
						Background="ivory" />

					<Label
						Grid.Row="3"
						Grid.Column="4"
						Width="auto"
						Height="22"
						Margin="119,0,0,5"
						Padding="0"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						VerticalContentAlignment="center"
						Content=")" />


					<Label
						Grid.Row="4"
						HorizontalAlignment="Right"
						Content="Parts:" />
					<xctk:IntegerUpDown
						x:Name="PartsSpinner"
						Grid.Row="4"
						Grid.Column="1"
						Width="50"
						Height="26"
						Margin="4"
						Padding="0"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						VerticalContentAlignment="Center"
						FontFamily="Courier New"
						FontSize="11"
						Maximum="12"
						Minimum="1"
						Text="1" />

					<Label
						Grid.Row="5"
						Margin="4,0,0,0"
						VerticalAlignment="Center"
						Content="Paper Type:" />
					<ComboBox
						x:Name="cmbPaperType"
						Grid.Row="5"
						Grid.Column="1"
						Grid.ColumnSpan="2"
						Width="170"
						Margin="4"
						Text="{Binding ProjectType}">
						<ComboBoxItem Content="First type" IsSelected="True" />
						<ComboBoxItem Content="Second type" />
						<ComboBoxItem Content="Third type" />
					</ComboBox>

					<Label
						Grid.Row="6"
						Margin="4,0,0,0"
						VerticalAlignment="Center"
						Content="Roll Width:" />
					<ComboBox
						x:Name="cmbRollWidth"
						Grid.Row="6"
						Grid.Column="1"
						Width="170"
						Margin="4"
						Text="{Binding RollWidth}">
						<ComboBoxItem Content="11 1/2&quot;" IsSelected="True" />
						<ComboBoxItem Content="14 7/8&quot;" />
						<ComboBoxItem Content="Other width" />
					</ComboBox>

					<Label
						Grid.Row="7"
						Margin="4"
						Padding="0"
						VerticalAlignment="Center"
						Content="Press Size:" />
					<ComboBox
						x:Name="cmbPressSize"
						Grid.Row="7"
						Grid.Column="1"
						Width="170"
						Margin="4,4,0,4"
						Text="{Binding PressSize}">
						<ComboBoxItem Content="Small" IsSelected="True" />
						<ComboBoxItem Content="Medium" />
						<ComboBoxItem Content="Large" />
					</ComboBox>

					<Label
						Grid.Row="8"
						Margin="4"
						Padding="0"
						VerticalAlignment="Center"
						Content="Lineholes out:" />

					<Label
						Grid.Row="9"
						Margin="4"
						Padding="0"
						VerticalAlignment="Center"
						Content="Collator cut size:" />
					<TextBox
						x:Name="txtCCS"
						Grid.Row="9"
						Grid.Column="1"
						Width="65"
						Margin="4"
						Style="{StaticResource TextField}" />

					<Label
						Grid.Row="10"
						Margin="4"
						Padding="0"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						Content="Customer:"
						FontSize="18"
						FontWeight="bold"
						Foreground="blue" />
					<Button
						x:Name="btnNew"
						Grid.Row="10"
						Grid.Column="1"
						Height="24"
						Margin="4"
						Padding="8,0"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						Click="btnNew_Click"
						Content="New" />
					<Button
						x:Name="btnLookup"
						Grid.Row="10"
						Grid.Column="1"
						Height="24"
						Margin="4,0,20,0"
						Padding="10,0"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						Click="btnLookup_Click"
						Content="Lookup or copy" />

					<Label
						Grid.Row="11"
						Margin="4"
						Padding="0"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						Content="Customer Name:" />
					<TextBox
						x:Name="txtCustomerName"
						Grid.Row="11"
						Grid.Column="1"
						Grid.ColumnSpan="2"
						Width="340"
						Margin="5,2,0,6"
						IsEnabled="False"
						Style="{StaticResource TextField}"
						Text="{Binding CustomerName}" />

					<Label
						Grid.Row="11"
						Grid.Column="3"
						Margin="13,0,0,0"
						HorizontalAlignment="Left"
						Content="Num:" />
					<TextBox
						x:Name="txtCustomerNum"
						Grid.Row="11"
						Grid.Column="3"
						Width="65"
						Margin="68,4,0,4"
						MouseDoubleClick="txtCustomerNum_MouseDoubleClick"
						LostFocus="txtCustomerNum_LostFocus"
						Style="{StaticResource TextField}" />
					<CheckBox
						x:Name="chkProspect"
						Grid.Row="11"
						Grid.Column="4"
						Margin="10,5,0,0"
						VerticalAlignment="Top"
						Content="Prospect"
						IsEnabled="False" />

					<Label
						Grid.Row="12"
						Margin="4"
						Padding="0"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						Content="Contact:" />
					<TextBox
						x:Name="txtContactName"
						Grid.Row="12"
						Grid.Column="1"
						Grid.ColumnSpan="2"
						Width="340"
						Margin="4"
						IsEnabled="False"
						Style="{StaticResource TextField}"
						Text="{Binding ContactName}" />

					<Label
						Grid.Row="13"
						Margin="4"
						Padding="0"
						HorizontalAlignment="Right"
						VerticalAlignment="Top"
						Content="Location:" />
					<TextBox
						x:Name="txtLocation"
						Grid.Row="13"
						Grid.Column="1"
						Grid.ColumnSpan="2"
						Width="340"
						Margin="4"
						IsEnabled="False"
						Style="{StaticResource TextField}"
						Text="{Binding Location}" />
					<Label
						Grid.Row="14"
						Margin="4"
						Padding="0"
						HorizontalAlignment="Right"
						VerticalAlignment="Top"
						Content="Address:" />

					<TextBox
						x:Name="txtAddress"
						Grid.Row="14"
						Grid.Column="1"
						Grid.ColumnSpan="4"
						Width="600"
						Margin="4"
						IsEnabled="False"
						Style="{StaticResource TextField}"
						Text="{Binding Address}" />

					<TextBox
						x:Name="txtCity"
						Grid.Row="15"
						Grid.RowSpan="2"
						Grid.Column="1"
						Grid.ColumnSpan="4"
						Width="600"
						Margin="4"
						VerticalAlignment="Top"
						IsEnabled="False"
						Style="{StaticResource TextField}"
						Text="{Binding Path=CSZ, Mode=OneWay}" />

					<Label
						Grid.Row="16"
						Margin="4"
						Padding="0"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						Content="Phone:" />

					<TextBox
						x:Name="txtPhone"
						Grid.Row="16"
						Grid.Column="1"
						Grid.ColumnSpan="2"
						Width="340"
						Margin="4"
						IsEnabled="False"
						Style="{StaticResource TextField}"
						Text="{Binding Phone}" />

					<Label
						Grid.Row="17"
						Margin="4"
						Padding="0"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						Content="Email:" />

					<TextBox
						x:Name="txtEmail"
						Grid.Row="17"
						Grid.Column="1"
						Grid.ColumnSpan="2"
						Width="340"
						Margin="4"
						IsEnabled="False"
						Style="{StaticResource TextField}"
						Text="{Binding Email}" />

					<RadioButton
						Grid.Row="8"
						Grid.Column="1"
						Margin="4"
						Content="Yes" />
					<RadioButton
						Grid.Row="8"
						Grid.Column="1"
						Margin="70,4,4,4"
						Content="No"
						IsChecked="True" />

					<Button
						x:Name="btnBaseCharge"
						Grid.Row="17"
						Grid.Column="4"
						Height="24"
						Margin="4"
						Padding="10,2"
						HorizontalAlignment="Center"
						VerticalAlignment="Top"
						Click="btnBaseCharge_Click"
						Content="Validate entries" />

				</Grid>

			</TabItem>

			<TabItem
				x:Name="Page2"
				FontSize="16"
				Header="    Page 2    "
				IsEnabled="False">

				<Grid Height="640">

					<Grid.RowDefinitions>
						<RowDefinition />
						<RowDefinition />
						<RowDefinition Height="30.75" />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
					</Grid.RowDefinitions>

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>

					<Label
						Grid.Row="1"
						Grid.Column="4"
						Width="auto"
						HorizontalAlignment="Center"
						Content="Elements"
						FontWeight="Bold" />

					<DataGrid
						x:Name="dgElements"
						Grid.Row="2"
						Grid.RowSpan="7"
						Grid.ColumnSpan="8"
						Width="770"
						Margin="42,0,0,30"
						AutoGenerateColumns="False"
						Background="lightBlue"
						ColumnWidth="auto"
						IsSynchronizedWithCurrentItem="True"
						ItemsSource="{Binding dtElements.DefaultView}">

						<DataGrid.Columns>

							<DataGridTextColumn Width="60" Binding="{Binding Path=SEQ}">
								<DataGridTextColumn.Header>
									<Label HorizontalAlignment="Right" Content="SEQ#" />
								</DataGridTextColumn.Header>
							</DataGridTextColumn>

							<DataGridTextColumn Width="430" Binding="{Binding Path=ITEM}">
								<DataGridTextColumn.Header>
									<Label HorizontalAlignment="Left" Content="Item" />
								</DataGridTextColumn.Header>
							</DataGridTextColumn>

							<DataGridTextColumn
								x:Name="gdPrice"
								Width="90"
								Binding="{Binding Path=PRICE, StringFormat={StaticResource DecimalStringFormatN2}}">
								<DataGridTextColumn.Header>
									<Label HorizontalAlignment="Right" Content="Price" />
								</DataGridTextColumn.Header>
							</DataGridTextColumn>

							<DataGridTextColumn Width="90" Binding="{Binding Path=MULT, StringFormat={StaticResource DecimalStringFormatN2}}">
								<DataGridTextColumn.Header>
									<Label HorizontalAlignment="Right" Content="Mult" />
								</DataGridTextColumn.Header>
							</DataGridTextColumn>

							<DataGridTextColumn Width="90" Binding="{Binding Path=EXT, StringFormat={StaticResource DecimalStringFormatN2}}">
								<DataGridTextColumn.Header>
									<Label HorizontalAlignment="Right" Content="Ext" />
								</DataGridTextColumn.Header>
							</DataGridTextColumn>

						</DataGrid.Columns>

					</DataGrid>

					<Grid Grid.Row="8">

						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>

						<StackPanel Orientation="Horizontal">
							<Label
								Grid.Row="9"
								Grid.Column="2"
								Width="auto"
								Margin="40,0,0,0"
								HorizontalAlignment="Left"
								Content="Lookup" />
							<Label
								Grid.Row="8"
								Grid.Column="3"
								Width="auto"
								HorizontalAlignment="Left"
								Content="Paper" />
							<Label
								Grid.Row="8"
								Grid.Column="4"
								Width="auto"
								HorizontalAlignment="Left"
								Content="Color" />
