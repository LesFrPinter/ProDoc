						<!--<DataGrid Grid.Row="1" Grid.Column="3" Grid.RowSpan="7" Grid.ColumnSpan="5" Background="lightBlue" Width="550" >-->

						<DataGrid
							x:Name="dgElements"
							Grid.Row="2"
							Grid.RowSpan="6"
							Grid.Column="1"
							Grid.ColumnSpan="7"
							Width="770"
							AutoGenerateColumns="False"
							Background="lightBlue"
							ColumnWidth="auto"
							IsSynchronizedWithCurrentItem="True"
							ItemsSource="{Binding dtElements.DefaultView}">

							<DataGrid.Columns>

								<DataGridTextColumn Width="60" Binding="{Binding Path=SEQ}">
									<DataGridTextColumn.Header>
										<Label HorizontalAlignment="Right" Content="SEQ#" />
									</DataGridTextColumn.Header>
								</DataGridTextColumn>

								<DataGridTextColumn Width="430" Binding="{Binding Path=ITEM}">
									<DataGridTextColumn.Header>
										<Label HorizontalAlignment="Left" Content="Item" />
									</DataGridTextColumn.Header>
								</DataGridTextColumn>

								<DataGridTextColumn
									x:Name="gdPrice"
									Width="90"
									Binding="{Binding Path=PRICE, StringFormat={StaticResource DecimalStringFormatN2}}">
									<DataGridTextColumn.Header>
										<Label HorizontalAlignment="Right" Content="Price" />
									</DataGridTextColumn.Header>
								</DataGridTextColumn>

								<DataGridTextColumn Width="90" Binding="{Binding Path=MULT, StringFormat={StaticResource DecimalStringFormatN2}}">
									<DataGridTextColumn.Header>
										<Label HorizontalAlignment="Right" Content="Mult" />
									</DataGridTextColumn.Header>
								</DataGridTextColumn>

								<DataGridTextColumn Width="90" Binding="{Binding Path=EXT, StringFormat={StaticResource DecimalStringFormatN2}}">
									<DataGridTextColumn.Header>
										<Label HorizontalAlignment="Right" Content="Ext" />
									</DataGridTextColumn.Header>
								</DataGridTextColumn>

							</DataGrid.Columns>

						</DataGrid>

						<Label
							Grid.Row="9"
							Grid.Column="2"
							Width="auto"
							HorizontalAlignment="Right"
							Content="Lookup" />
						<Label
							Grid.Row="8"
							Grid.Column="3"
							Width="auto"
							HorizontalAlignment="Left"
							Content="Paper" />
						<Label
							Grid.Row="8"
							Grid.Column="4"
							Width="auto"
							HorizontalAlignment="Left"
							Content="Color" />
						<Label
							Grid.Row="8"
							Grid.Column="5"
							Width="auto"
							HorizontalAlignment="Left"
							Content="Type" />
						<Label
							Grid.Row="8"
							Grid.Column="6"
							Width="auto"
							HorizontalAlignment="Left"
							Content="Basis" />
						<Label
							Grid.Row="8"
							Grid.Column="7"
							Width="auto"
							HorizontalAlignment="Left"
							Content="Other?"
							FontWeight="Bold"
							Foreground="Red" />

						<TextBox
							Grid.Row="9"
							Grid.Column="3"
							Width="100"
							Margin="3,2,0,2" />
						<TextBox
							Grid.Row="9"
							Grid.Column="4"
							Width="100"
							Margin="3,2,0,2" />
						<TextBox
							Grid.Row="9"
							Grid.Column="5"
							Width="100"
							Margin="3,2,0,2" />
						<TextBox
							Grid.Row="9"
							Grid.Column="6"
							Width="100"
							Margin="3,2,0,2" />
						<TextBox
							Grid.Row="9"
							Grid.Column="7"
							Width="100"
							Margin="3,2,0,2" />

						<Label
							Grid.Row="10"
							Grid.Column="4"
							Width="auto"
							HorizontalAlignment="Center"
							Content="Features"
							FontWeight="Bold" />
						<Label
							Grid.Row="10"
							Grid.Column="6"
							Width="auto"
							HorizontalAlignment="Center"
							Content="Cartons"
							FontWeight="Bold" />

						<Button
							x:Name="btnShowHideFeaturesPicker"
							Grid.Row="8"
							Grid.RowSpan="3"
							Grid.ColumnSpan="2"
							Padding="10"
							HorizontalAlignment="Left"
							Click="btnShowHideFeaturesPicker_Click"
							Content="Show/hide feature picker" />

						<!--  d:ItemsSource="{Binding Path=Options.DefaultView}"  -->

						<DataGrid
							x:Name="dgFeatures"
							Grid.Row="11"
							Grid.RowSpan="14"
							Grid.Column="0"
							Grid.ColumnSpan="2"
							Width="220"
							Height="275"
							VerticalAlignment="Top"
							Background="LightYellow"
							BorderBrush="#FF908284"
							Visibility="Hidden">
							<DataGrid.Columns>
								<DataGridCheckBoxColumn Binding="{Binding SHOW, UpdateSourceTrigger=PropertyChanged}" Header="Show">
									<DataGridCheckBoxColumn.ElementStyle>
										<Style TargetType="CheckBox" />
									</DataGridCheckBoxColumn.ElementStyle>
								</DataGridCheckBoxColumn>
								<DataGridTextColumn Binding="{Binding Path=ITEM}" Header="Item" />
							</DataGrid.Columns>
