<Window x:Class="ProDocEstimate.Quotations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:ProDocEstimate"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Quotations" Height="700" Width="900">

	<Window.Resources>

		<Style TargetType="{x:Type Button}">
			<Setter Property="FontSize" Value="12"/>
			<Setter Property="Foreground" Value="White" />
			<Setter Property="Background" Value="purple" />
			<Setter Property="Margin" Value="5 2 2 2" />
			<Setter Property="Padding" Value="5" />
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="Red"/>
					<Setter Property="Foreground" Value="White"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="Label">
			<Setter Property="Foreground" Value="Purple" />
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="Padding" Value="3" />
			<Setter Property="FontSize" Value="18" />
			<Setter Property="Margin" Value="0 0 10 0" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="HorizontalAlignment" Value="Right" />
		</Style>

		<Style TargetType="TextBox">
			<Setter Property="Foreground" Value="Black" />
			<Setter Property="Background" Value="LightYellow" />
			<Setter Property="Padding" Value="3" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="FontFamily" Value="Courier New" />
			<Setter Property="Margin" Value="0 4 10 4" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Style.Triggers>
				<Trigger Property="IsFocused" Value="True">
					<Setter Property="Background" Value="Blue"/>
					<Setter Property="Foreground" Value="White"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="ComboBox">
			<Setter Property="FontSize" Value="14" />
			<Setter Property="FontFamily" Value="Courier New" />
			<Setter Property="Margin" Value="0 0 10 0" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Style.Triggers>
				<Trigger Property="IsFocused" Value="True">
					<Setter Property="Background" Value="Blue"/>
					<Setter Property="Foreground" Value="White"/>
				</Trigger>
			</Style.Triggers>
		</Style>

	</Window.Resources>

	<Grid Background="LightGray" >

		<Grid.RowDefinitions>
			<RowDefinition Height="55" />
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Label 
		 Content="Quotations" 
		 Foreground="White"
		 Background="purple"
		 FontSize="24" 
		 Padding="10"
		 HorizontalAlignment="Left" 
		 Margin="10,0,0,0" Width="138" />

		<TabControl Grid.Row="1" Grid.RowSpan="2"  Background="LightGray" >

			<TabItem Header="    Page 1    " FontSize="16">

				<Grid>

					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>

					<StackPanel Orientation="Horizontal" Grid.ColumnSpan="3">
						<Label Content="  Customer: " FontSize="18" Foreground="blue" FontWeight="bold"/>
						<Button x:Name="btnNew"    Click="btnNew_Click">New</Button>
						<Button x:Name="btnLookup" Click="btnLookup_Click">Lookup or copy</Button>
					</StackPanel>

					<Label Grid.Row="1" Content="Customer Name:" HorizontalAlignment="Right" />
					<TextBox Grid.Row="1" Grid.Column="1" x:Name="txtCustomerName" Width="390" Grid.ColumnSpan="3" Text="{Binding CustomerName}" />

					<Label Grid.Row="2" Content="Location:" HorizontalAlignment="Right" />
					<TextBox Grid.Row="2" Grid.Column="1" x:Name="txtLocation" Width="390" Grid.ColumnSpan="3" Text="{Binding Location}" />

					<Label Grid.Row="3" Content="Address:" HorizontalAlignment="Right" />
					<TextBox Grid.Row="3" Grid.Column="1" x:Name="txtAddress" Width="390" Grid.ColumnSpan="3" Text="{Binding Address}" />

					<Label Grid.Row="4" Content="City, State, ZIP:"
					 HorizontalAlignment="Right" />
					<TextBox Grid.Row="4" Grid.Column="1" x:Name="txtCity" Width="240" Grid.ColumnSpan="2" Text="{Binding City}" Margin="0 2 0 5" />
					<TextBox Grid.Row="4" Grid.Column="2" x:Name="txtState" Width="50" Margin="68 2 0 5" Text="{Binding State}" />
					<TextBox Grid.Row="4" Grid.Column="2" x:Name="txtZIP"   Width="85" Margin="125 2 0 5" 
					 Text="{Binding ZIP}" Grid.ColumnSpan="2" />

					<Label Grid.Row="5" Content="Contact / Phone:" HorizontalAlignment="Right" />
					<TextBox Grid.Row="5" Grid.Column="1" x:Name="txtContactName" Width="270" 
					 Text="{Binding ContactName}" Margin="0 2 0 5" Grid.ColumnSpan="2"   />
					<TextBox Grid.Row="5" Grid.Column="2" x:Name="txtPhone" Width="110" 
					 Grid.ColumnSpan="2"  Text="{Binding Phone}" Margin="100 2 0 5" />

					<StackPanel Grid.Row="7" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="4" Margin="10 0 0 0">
						<Button Content="New quote" />
						<Button Content="Copy a previous quote" />
						<Button Content="Copy a previous quote, change only quantity" />
					</StackPanel>

					<Label Grid.Row="8" Content="Project Type:" HorizontalAlignment="Right" />
					<ComboBox Grid.Row="8" Grid.Column="1" x:Name="cmbProjectType" Width="200" 
						Text="{Binding ProjectType}" Margin="0 2 0 5" Grid.ColumnSpan="2" Foreground="Black" >
						<ComboBoxItem Content="First type" IsSelected="True" />
						<ComboBoxItem Content="Second type" />
						<ComboBoxItem Content="Third type" />
					</ComboBox>

					<Label Grid.Row="9" Content="Parts:" HorizontalAlignment="Right" />
					<xctk:IntegerUpDown Grid.Row="9" Grid.Column="1" x:Name="PartsSpinner"  Width="50" Minimum="1" Maximum="12" Margin="0 4 0 4" HorizontalAlignment="Left" />

					<Label Grid.Row="10" Content="Paper Type:" HorizontalAlignment="Right" />
					<ComboBox Grid.Row="10" Grid.Column="1" x:Name="cmbPaperType" Width="180" 
						Text="{Binding ProjectType}" Margin="0 2 0 5" Grid.ColumnSpan="2" >
						<ComboBoxItem Content="First type" IsSelected="True" />
						<ComboBoxItem Content="Second type" />
						<ComboBoxItem Content="Third type" />
					</ComboBox>

					<Label Grid.Row="11" Content="Roll Width:" HorizontalAlignment="Right" />
					<ComboBox Grid.Row="11" Grid.Column="1" x:Name="cmbRollWidth" Width="180" 
						Text="{Binding RollWidth}" Margin="0 2 0 5" Grid.ColumnSpan="2" >
						<ComboBoxItem Content="11 1/2&quot;" IsSelected="True" />
						<ComboBoxItem Content="14 7/8&quot;" />
						<ComboBoxItem Content="Other width" />
					</ComboBox>

					<Label Grid.Row="12" Content="Press Size:" HorizontalAlignment="Right" />
					<ComboBox Grid.Row="12" Grid.Column="1" x:Name="cmbPressSize" Width="180" 
						Text="{Binding PressSize}" Margin="0 2 0 5" Grid.ColumnSpan="2" >
						<ComboBoxItem Content="Small" IsSelected="True" />
						<ComboBoxItem Content="Medium" />
						<ComboBoxItem Content="Large" />
					</ComboBox>

					<Label Grid.Row="13" Content="Lineholes out:" HorizontalAlignment="Right" />
					<ComboBox Grid.Row="13" Grid.Column="1" x:Name="cmbLineHoles" Width="180" 
						Text="{Binding LineHoles}" Margin="0 2 0 5" Grid.ColumnSpan="2" >
						<ComboBoxItem Content="Should" IsSelected="True" />
						<ComboBoxItem Content="This be" />
						<ComboBoxItem Content="a spinner?" />
					</ComboBox>

					<Button Grid.Row="13"
					 Grid.Column="3" Content="Base Charge" ToolTip="What is this?" />


				</Grid>

			</TabItem>

			<TabItem Header="    Page 2    " FontSize="16">

				<Grid>

					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>

					<Label Content="            Qty" HorizontalAlignment="Left" />
					<Label Content="Mult" Grid.Column="6" HorizontalAlignment="Center" />

					<CheckBox 
					 Grid.Row="0" Grid.Column="1" Width="60" VerticalAlignment="Center" FontSize="18"
					 HorizontalAlignment="Left" Margin="3 0 0 0"
					 Content="Exact " FlowDirection="RightToLeft" VerticalContentAlignment="center" />

					<Label Grid.Row="1" Grid.Column="0" Content=" 1" Width="20" HorizontalAlignment="Left" />
					<Label Grid.Row="2" Grid.Column="0" Content=" 2" Width="20" HorizontalAlignment="Left" />
					<Label Grid.Row="3" Grid.Column="0" Content=" 3" Width="20" HorizontalAlignment="Left" />
					<Label Grid.Row="4" Grid.Column="0" Content=" 4" Width="20" HorizontalAlignment="Left" />
					<Label Grid.Row="5" Grid.Column="0" Content=" 5" Width="20" HorizontalAlignment="Left" />
					<Label Grid.Row="6" Grid.Column="0" Content=" 6" Width="20" HorizontalAlignment="Left" />

					<TextBox Grid.Row="1" Grid.Column="0" Margin="30 2 0 2" Width="60" Text="{Binding Qty1,Mode=TwoWay,StringFormat=f2}"/>
					<TextBox Grid.Row="2" Grid.Column="0" Margin="30 2 0 2" Width="60" Text="   .  " />
					<TextBox Grid.Row="3" Grid.Column="0" Margin="30 2 0 2" Width="60" Text="   .  " />
					<TextBox Grid.Row="4" Grid.Column="0" Margin="30 2 0 2" Width="60" Text="   .  " />
					<TextBox Grid.Row="5" Grid.Column="0" Margin="30 2 0 2" Width="60" Text="   .  " />
					<TextBox Grid.Row="6" Grid.Column="0" Margin="30 2 0 2" Width="60" Text="   .  " />

					<Label Content="Seq #" Grid.Column="3" HorizontalAlignment="Left" />

					<Label Grid.Row="1" Grid.Column="3" Content=" 10  Base Charge" Width="220" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
					<Label Grid.Row="2" Grid.Column="3" Content=" 11  Order Entry" Width="220" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
					<Label Grid.Row="3" Grid.Column="3" Content=" 12  Pre-Press"   Width="220" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
					<Label Grid.Row="4" Grid.Column="3" Content=" 13  White 11-5/8&quot; CB" Width="220" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
					<Label Grid.Row="5" Grid.Column="3" Content=" 14  Canary 11-5/8&quot; CFB" Width="220" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
					<Label Grid.Row="6" Grid.Column="3" Content=" 15  Pink 11-5/8&quot; CF" Width="220" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>

					<TextBox Grid.Row="1" Grid.Column="5" Margin="3 2 0 2" Width="100" Text="       .00" Grid.ColumnSpan="2" />
					<TextBox Grid.Row="2" Grid.Column="5" Margin="3 2 0 2" Width="100" Text="       .  " Grid.ColumnSpan="2" />
					<TextBox Grid.Row="3" Grid.Column="5" Margin="3 2 0 2" Width="100" Text="       .  " Grid.ColumnSpan="2" />
					<TextBox Grid.Row="4" Grid.Column="5" Margin="3 2 0 2" Width="100" Text="       .  " Grid.ColumnSpan="2" ToolTip="Retrieve from last closed P/O" />
					<TextBox Grid.Row="5" Grid.Column="5" Margin="3 2 0 2" Width="100" Text="       .  " Grid.ColumnSpan="2" ToolTip="Retrieve from last closed P/O" />
					<TextBox Grid.Row="6" Grid.Column="5" Margin="3 2 0 2" Width="100" Text="       .  " Grid.ColumnSpan="2" ToolTip="Retrieve from last closed P/O" />

					<xctk:IntegerUpDown Grid.Row="1" Grid.Column="6" x:Name="Spin1"  Width="50" Minimum="1" Maximum="12" Margin="0 4 0 4" HorizontalAlignment="center" />
					<xctk:IntegerUpDown Grid.Row="2" Grid.Column="6" x:Name="Spin2"  Width="50" Minimum="1" Maximum="12" Margin="0 4 0 4" HorizontalAlignment="center" />
					<xctk:IntegerUpDown Grid.Row="3" Grid.Column="6" x:Name="Spin3"  Width="50" Minimum="1" Maximum="12" Margin="0 4 0 4" HorizontalAlignment="center" />
					<xctk:IntegerUpDown Grid.Row="4" Grid.Column="6" x:Name="Spin4"  Width="50" Minimum="1" Maximum="12" Margin="0 4 0 4" HorizontalAlignment="center" />
					<xctk:IntegerUpDown Grid.Row="5" Grid.Column="6" x:Name="Spin5"  Width="50" Minimum="1" Maximum="12" Margin="0 4 0 4" HorizontalAlignment="center" />
					<xctk:IntegerUpDown Grid.Row="6" Grid.Column="6" x:Name="Spin6"  Width="50" Minimum="1" Maximum="12" Margin="0 4 0 4" HorizontalAlignment="center" />

					<Label Grid.Row="9" Grid.Column="2" Content="Lookup" Width="auto" HorizontalAlignment="Right" />
					<Label Grid.Row="8" Grid.Column="3" Content="Paper"  Width="auto" HorizontalAlignment="Left" />
					<Label Grid.Row="8" Grid.Column="4" Content="Color"  Width="auto" HorizontalAlignment="Left" />
					<Label Grid.Row="8" Grid.Column="5" Content="Type"   Width="auto" HorizontalAlignment="Left" />
					<Label Grid.Row="8" Grid.Column="6" Content="Basis"  Width="auto" HorizontalAlignment="Left" />

					<TextBox Grid.Row="9" Grid.Column="3" Margin="3 2 0 2" Width="100"  />
					<TextBox Grid.Row="9" Grid.Column="4" Margin="3 2 0 2" Width="100"  />
					<TextBox Grid.Row="9" Grid.Column="5" Margin="3 2 0 2" Width="100"  />
					<TextBox Grid.Row="9" Grid.Column="6" Margin="3 2 0 2" Width="100"  />

					<Label Grid.Row="10" Grid.Column="4" Content="Features" FontWeight="Bold"  Width="auto" HorizontalAlignment="Center" />
					<Label Grid.Row="10" Grid.Column="6" Content="Cartons" FontWeight="Bold"  Width="auto" HorizontalAlignment="Center" />

					<Label Grid.Row="11" Grid.Column="2" Content="Ink color"  Width="auto" HorizontalAlignment="Left" />
					<Label Grid.Row="12" Grid.Column="2" Content="Backer"  Width="auto" HorizontalAlignment="Left" />
					<Label Grid.Row="13" Grid.Column="2" Content="Punching"   Width="auto" HorizontalAlignment="Left" />
					<Label Grid.Row="14" Grid.Column="2" Content="CrossPerf"   Width="auto" HorizontalAlignment="Left" />
					<Label Grid.Row="15" Grid.Column="2" Content="Booking"  Width="auto" HorizontalAlignment="Left" />
					<Label Grid.Row="16" Grid.Column="2" Content="Fan a part"  Width="auto" HorizontalAlignment="Left" />
					<Label Grid.Row="17" Grid.Column="2" Content="Shrink wrap"  Width="auto" HorizontalAlignment="Left" />
					<Label Grid.Row="18" Grid.Column="2" Content="Padding"  Width="auto" HorizontalAlignment="Left" />

					<xctk:IntegerUpDown Grid.Row="11" Grid.Column="3" x:Name="Spin11"  Width="50" Minimum="1" Maximum="12" Margin="8 4 0 4" HorizontalAlignment="Left" />
					<Label Grid.Row="11" Grid.Column="3" Content="std"  Width="auto" HorizontalAlignment="Left" Margin="60 0 0 0" />

					<xctk:IntegerUpDown Grid.Row="11" Grid.Column="4" x:Name="Spin12"  Width="50" Minimum="1" Maximum="12" Margin="2 4 0 4" HorizontalAlignment="Left" />
					<Label Grid.Row="11" Grid.Column="4" Content="match"  Width="auto" HorizontalAlignment="Left" Margin="56 0 0 0" Grid.ColumnSpan="2" />

					<xctk:IntegerUpDown Grid.Row="11" Grid.Column="5" x:Name="Spin13"  Width="50" Minimum="1" Maximum="12" Margin="2 4 0 4" HorizontalAlignment="Left" />
					<Label Grid.Row="11" Grid.Column="5" Content="split"  Width="auto" HorizontalAlignment="Left" Margin="56 0 0 0" Grid.ColumnSpan="2" />

					<xctk:IntegerUpDown Grid.Row="11" Grid.Column="6" x:Name="Spin14"  Width="50" Minimum="1" Maximum="12" Margin="2 4 0 4" HorizontalAlignment="Left" />
					<Label Grid.Row="11" Grid.Column="6" Content="thermo"  Width="auto" HorizontalAlignment="Left" Margin="56 0 0 0" Grid.ColumnSpan="2" />

					<xctk:IntegerUpDown Grid.Row="12" Grid.Column="3" x:Name="Spin15"  Width="60" Minimum="1" Maximum="12" Margin="8 4 0 4" HorizontalAlignment="Left" />

					<ComboBox Grid.Row="13" Grid.Column="3" Margin="5 3 0 3" >
						<ComboBoxItem Content="Punch" />
						<ComboBoxItem Content="Drill" IsSelected="True" />
					</ComboBox>

					<ComboBox Grid.Row="14" Grid.Column="3" Margin="5 3 0 3" >
						<ComboBoxItem Content="Full" IsSelected="True" />
						<ComboBoxItem Content="Partial" />
					</ComboBox>

				</Grid>

			</TabItem>

			<TabItem Header="    Page 3    " FontSize="16"></TabItem>

		</TabControl>

	</Grid>

</Window>