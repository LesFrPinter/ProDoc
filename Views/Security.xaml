                    <Label                      Grid.Row="5" Grid.Column="9"   Content   ="{Binding Ftype[17]}" Margin="2 0 0 0" HorizontalAlignment="Left" />
                    <Label                      Grid.Row="5" Grid.Column="10"  Content   ="{Binding Flat [17]}"  />

                    <CheckBox                   Grid.Row="6" Grid.Column="8"   IsChecked ="{Binding Chk  [18], Mode=TwoWay}" HorizontalAlignment="Left"  x:Name="Ckk19" Unchecked="ChkBox_Unchecked" Checked="ChkBox_Checked" />
                    <Label                      Grid.Row="6" Grid.Column="9"   Content   ="{Binding Ftype[18]}" Margin="2 0 0 0" HorizontalAlignment="Left" />
                    <Label                      Grid.Row="6" Grid.Column="10"  Content   ="{Binding Flat [18]}"  />

                    <CheckBox                   Grid.Row="7" Grid.Column="8"   IsChecked ="{Binding Chk  [19], Mode=TwoWay}" HorizontalAlignment="Left" x:Name="Ckk20" Unchecked="ChkBox_Unchecked" Checked="ChkBox_Checked" />
