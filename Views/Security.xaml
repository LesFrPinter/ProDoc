<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProDocEstimate.Views"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="ProDocEstimate.Views.Security"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        Title="Security" Height="300" Width="800">

    <Window.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Height" Value="18" />
            <Setter Property="Padding" Value="1" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="2,0,0,0" />
        </Style>
        <Style TargetType="{x:Type telerik:RadNumericUpDown}">
            <Setter Property="Minimum"  Value="0" />
            <Setter Property="FontSize" Value="9" />
            <Setter Property="Maximum"  Value="200" />
            <Setter Property="Width"    Value="45" />
        </Style>
    </Window.Resources>

    <Viewbox>

        <Grid Width="800" Height="320" VerticalAlignment="Top" >

            <Grid.RowDefinitions>

                <RowDefinition Height="40" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="38" />

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>

                <ColumnDefinition Width="1.5*"/>

                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>

            </Grid.ColumnDefinitions>

            <Label 
                Content="Security" 
                Grid.Column="4"
                FontSize="22" Foreground="Red" Padding="2 0" 
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                Height="33" Grid.ColumnSpan="3" Margin="29,0,0,0" >
                <Label.BitmapEffect>
                    <DropShadowBitmapEffect ShadowDepth="5" Direction="260" Opacity="75" />
                </Label.BitmapEffect>
            </Label>

            <CheckBox                   Grid.Row="2" Grid.Column="0" Content="{Binding Chk[0], Mode=TwoWay}" HorizontalAlignment="Left" />
            <Label                      Grid.Row="2" Grid.Column="1" Content="{Binding Ftype[0]}" />
            <Label                      Grid.Row="2" Grid.Column="2" Content="{Binding Flat[0]}"  />
            <telerik:RadNumericUpDown   Grid.Row="2" Grid.Column="3" Value  ="{Binding Mult[0], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  NumberDecimalDigits="0" 
                                        VerticalAlignment="Center" x:Name="NU01" ValueChanged="NU01_ValueChanged"/>
            <TextBox                    Grid.Row="2" Grid.Column="4" Text   ="{Binding Ext[0],UpdateSourceTrigger=PropertyChanged, StringFormat=C}" IsReadOnly="True" Width="50" />

            <CheckBox                   Grid.Row="3" Grid.Column="0" Content="{Binding Chk[1], Mode=TwoWay}" HorizontalAlignment="Left" />
            <Label                      Grid.Row="3" Grid.Column="1" Content="{Binding Ftype[1]}" />
            <Label                      Grid.Row="3" Grid.Column="2" Content="{Binding Flat[1]}"  />
            <telerik:RadNumericUpDown   Grid.Row="3" Grid.Column="3" Value  ="{Binding Mult[1], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  NumberDecimalDigits="0" 
                                        VerticalAlignment="Center" x:Name   ="NU02" ValueChanged="NU01_ValueChanged" />
            <TextBox                    Grid.Row="3" Grid.Column="4" Text   ="{Binding Ext[1],UpdateSourceTrigger=PropertyChanged, StringFormat=C}" IsReadOnly="True" Width="50" />

            <CheckBox Grid.Row="4" Grid.Column="0"  Content="{Binding Chk[2], Mode=TwoWay}" HorizontalAlignment="Left" />
            <Label    Grid.Row="4"  Grid.Column="1" Content="{Binding Ftype[2]}" Margin="2 0 0 0" />

            <CheckBox Grid.Row="5" Grid.Column="0"  Content="{Binding Chk[3], Mode=TwoWay}" HorizontalAlignment="Left" />
            <Label    Grid.Row="5"  Grid.Column="1" Content="{Binding Ftype[3]}" Margin="2 0 0 0" />

            <CheckBox Grid.Row="6" Grid.Column="0"  Content="{Binding Chk[4], Mode=TwoWay}" HorizontalAlignment="Left" />
            <Label    Grid.Row="6"  Grid.Column="1" Content="{Binding Ftype[4]}" Margin="2 0 0 0" />

            <CheckBox Grid.Row="7" Grid.Column="0"  Content="{Binding Chk[5], Mode=TwoWay}" HorizontalAlignment="Left" />
            <Label    Grid.Row="7"  Grid.Column="1" Content="{Binding Ftype[5]}" Margin="2 0 0 0" />

            <CheckBox Grid.Row="8" Grid.Column="0"  Content="{Binding Chk[6], Mode=TwoWay}" HorizontalAlignment="Left" />
            <Label    Grid.Row="8"  Grid.Column="1" Content="{Binding Ftype[6]}" Margin="2 0 0 0" />

            <CheckBox Grid.Row="9" Grid.Column="0"  Content="{Binding Chk[7], Mode=TwoWay}" HorizontalAlignment="Left" />
            <Label    Grid.Row="9"  Grid.Column="1" Content="{Binding Ftype[7]}" Margin="2 0 0 0" />

            <CheckBox Grid.Row="10" Grid.Column="0" Content="{Binding Chk[8], Mode=TwoWay}" HorizontalAlignment="Left" />
            <Label    Grid.Row="10" Grid.Column="1" Content="{Binding Ftype[8]}" Margin="2 0 0 0" />

            <CheckBox Grid.Row="11" Grid.Column="0" Content="{Binding Chk[9], Mode=TwoWay}" HorizontalAlignment="Left" />
            <Label    Grid.Row="11" Grid.Column="1" Content="{Binding Ftype[9]}" Margin="2 0 0 0" />

            <CheckBox Grid.Row="12" Grid.Column="0" Content="{Binding Chk[10], Mode=TwoWay}" HorizontalAlignment="Left" />
            <Label    Grid.Row="12" Grid.Column="1" Content="{Binding Ftype[10]}" Margin="2 0 0 0" />

            <Label    Grid.Row="2"  Grid.Column="7" Content="{Binding Ftype[11]}" Margin="2 0 0 0" />
            <Label    Grid.Row="3"  Grid.Column="7" Content="{Binding Ftype[12]}" Margin="2 0 0 0" />
            <Label    Grid.Row="4"  Grid.Column="7" Content="{Binding Ftype[13]}" Margin="2 0 0 0" />
            <Label    Grid.Row="5"  Grid.Column="7" Content="{Binding Ftype[14]}" Margin="2 0 0 0" />
            <Label    Grid.Row="6"  Grid.Column="7" Content="{Binding Ftype[15]}" Margin="2 0 0 0" />
            <Label    Grid.Row="7"  Grid.Column="7" Content="{Binding Ftype[16]}" Margin="2 0 0 0" />
            <Label    Grid.Row="8"  Grid.Column="7" Content="{Binding Ftype[17]}" Margin="2 0 0 0" />
            <Label    Grid.Row="9"  Grid.Column="7" Content="{Binding Ftype[18]}" Margin="2 0 0 0" />
            <Label    Grid.Row="10" Grid.Column="7" Content="{Binding Ftype[19]}" Margin="2 0 0 0" />
            <Label    Grid.Row="11" Grid.Column="7" Content="{Binding Ftype[20]}" Margin="2 0 0 0" />

            <StackPanel Orientation="Horizontal" Grid.Row="11" Grid.ColumnSpan="15" HorizontalAlignment="Right" VerticalAlignment="Center" Height="22" >
                <Button x:Name="btnSave"   Content="Save"   Padding="6 2" VerticalAlignment="Bottom" />
                <Button x:Name="btnCancel" Content="Cancel" Padding="6 2" VerticalAlignment="Bottom" />
            </StackPanel>

        </Grid>

    </Viewbox>

</Window>