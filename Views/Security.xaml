                    <Label                                   Content="%" HorizontalAlignment="Left"                                 Grid.Row="3" Grid.Column="2" Margin="164,3,0,4" />

                    <Label                                   Content="Finish Material:"                                             Grid.Row="4" Grid.ColumnSpan="2" Margin="0,0,5,0" />
