                    <Label                      Grid.Row="7" Grid.Column="10"  Content   ="{Binding Flat [19]}"  />

                    <CheckBox                   Grid.Row="8" Grid.Column="8"   IsChecked ="{Binding Chk  [20], Mode=TwoWay}" HorizontalAlignment="Left" x:Name="Ckk21" Unchecked="ChkBox_Unchecked" Checked="ChkBox_Checked" />
                    <Label                      Grid.Row="8" Grid.Column="9"   Content   ="{Binding Ftype[20]}" Margin="2 0 0 0" HorizontalAlignment="Left" />
                    <Label                      Grid.Row="8" Grid.Column="10"  Content   ="{Binding Flat [20]}"  />

                </Grid>

            </StackPanel>

            <StackPanel Grid.Row="1" Height="120" VerticalAlignment="Top" >

                <Grid Background="LightGray" Height="120" >

                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="0" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="129*" />
                        <ColumnDefinition Width="43*"/>
                        <ColumnDefinition Width="229*" />
                        <ColumnDefinition Width="171*" />
                        <ColumnDefinition Width="229*" />
                    </Grid.ColumnDefinitions>

                    <Border BorderThickness="1,1,1,1"
                        Height="28"
                        Width="80"
                        Grid.RowSpan="2"
                        VerticalAlignment="Top"
                        Margin="10 0 0 0"
                        HorizontalAlignment="Left"
                        Padding="0"
                        Background="Yellow"
                        BorderBrush="Gray"
                        CornerRadius="10">
                        <Label BorderThickness="1"
                               Height="26"
                               FontSize="16"
                               Padding="0"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center"
                               Foreground="Blue"
                               Content=" Material" Margin="2,0,2,0" />
                    </Border>

                    <Label                                   Content="Total"                                                        Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="2" Margin="35,0,5,0" />
                    <Label                                   Content="Markup"                                                       Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="2" Margin="105,0,5,0" />
                    <Label                                   Content="Total"                                                        Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="4" Margin="35,0,5,0" />
                    <Label                                   Content="Markup"                                                       Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="4" Margin="105,0,5,0" />

                    <Label                                   Content="Flat Charge:"                                                 Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,5,0" />
                    <TextBox                                 Text ="{Binding CalculatedFlatCharge,   StringFormat='C'}"             Grid.Row="1" Grid.Column="2" Margin="20 0 0 0" Height="18"/>
                    <telerik:RadNumericUpDown                Value="{Binding FlatChargePct, UpdateSourceTrigger=PropertyChanged}"   Grid.Row="1" Grid.Column="2" Margin="100,1,0,1"  ValueChanged="PctChanged" />
                    <Label                                   Content="%" HorizontalAlignment="Left"                                 Grid.Row="1" Grid.Column="2" Margin="164,3,0,4" />

                    <Label                                   Content="Run Charge:"                                                  Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,5,0" />
                    <TextBox                                 Text ="{Binding CalculatedRunCharge,    StringFormat='C'}"             Grid.Row="2" Grid.Column="2" Margin="20 0 0 0" Height="18"/>
                    <telerik:RadNumericUpDown                Value="{Binding RunChargePct, UpdateSourceTrigger=PropertyChanged}"    Grid.Row="2" Grid.Column="2" Margin="100,1,0,1"  ValueChanged="PctChanged"  />
                    <Label                                   Content="%" HorizontalAlignment="Left"                                 Grid.Row="2" Grid.Column="2" Margin="164,4,0,3" />

                    <Label                                   Content="Plate Material:"                                              Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,5,0" />
