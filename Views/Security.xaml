                    <telerik:RadNumericUpDown                Value="{Binding FinishChargePct,UpdateSourceTrigger=PropertyChanged}"  Grid.Row="4" Grid.Column="2" Margin="100,1,0,1" ValueChanged="PctChanged"  />
                    <Label                                   Content="%" HorizontalAlignment="Left"                                 Grid.Row="4" Grid.Column="2" Margin="164,4,0,2" />

                    <Label                                   Content="Converting Material:"                                         Grid.Row="1" Grid.Column="3" Margin="0,0,5,0" />
