                    <Label                      Grid.Row="2" Grid.Column="10"  Content   ="{Binding Flat [14]}"  />

                    <CheckBox                   Grid.Row="3" Grid.Column="8"   IsChecked ="{Binding Chk  [15], Mode=TwoWay}" HorizontalAlignment="Left"  x:Name="Ckk16" Unchecked="ChkBox_Unchecked" Checked="ChkBox_Checked" />
