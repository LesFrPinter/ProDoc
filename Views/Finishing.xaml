<Window x:Class="ProDocEstimate.Views.Finishing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProDocEstimate.Views"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d"
        Title="Finishing"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        Height="270" Width="800">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment"   Value="Bottom" />
            <Setter Property="Margin"              Value="2 0"    />
            <Setter Property="Padding"             Value="2 0"    />
        </Style>
        <Style TargetType="telerik:RadNumericUpDown">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Margin"   Value="4" />
            <Setter Property="Height"   Value="20" />
            <Setter Property="Width"    Value="20" />
            <Setter Property="Grid.Row" Value="2" />
            <Setter Property="NumberDecimalDigits" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Minimum"  Value="0" />
        </Style>
    </Window.Resources>

    <!--<Viewbox>-->

        <Grid Width="800" Height="300" VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="35" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label FontSize="22" Foreground="Red" Content="Finishing" Width="100" Grid.ColumnSpan="8" HorizontalAlignment="Center" Padding="2 0" Margin="0" >
                <Label.BitmapEffect>
                    <DropShadowBitmapEffect ShadowDepth="5" Direction="260" Opacity="75" />
                </Label.BitmapEffect>
            </Label>

            <Label Grid.Row="1"                 Content="Book" />
            <Label Grid.Row="1" Grid.Column="1" Content="Cello" />
            <Label Grid.Row="1" Grid.Column="2" Content="Drill Holes" />
            <Label Grid.Row="1" Grid.Column="3" Content="Pad" />
            <Label Grid.Row="1" Grid.Column="4" Content="Trim" />

            <telerik:RadNumericUpDown                 Width="60" Value="{Binding Book}"       x:Name="M1" />
            <telerik:RadNumericUpDown Grid.Column="1" Width="60" Value="{Binding Cello}"      x:Name="M2"  />
            <telerik:RadNumericUpDown Grid.Column="2" Width="60" Value="{Binding DrillHoles}" x:Name="M3"/>
            <telerik:RadNumericUpDown Grid.Column="3" Width="60" Value="{Binding Pad}"        x:Name="M4"/>
            <telerik:RadNumericUpDown Grid.Column="4" Width="60" Value="{Binding Trim}"       x:Name="M5"/>

        <local:DetailFeatures Grid.Row="3" Width="750" Grid.RowSpan="3" Grid.ColumnSpan="9" Height="120" VerticalAlignment="Top" />

        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="3" VerticalAlignment="Top" Margin="0 -50 0 0" >
                <Button x:Name="btnSave"   Content="Save"   Padding="6 2" VerticalAlignment="Bottom" Click="btnSave_Click" />
                <Button x:Name="btnCancel" Content="Cancel" Padding="6 2" VerticalAlignment="Bottom" Click="btnCancel_Click" />
            </StackPanel>

        </Grid>

    <!--</Viewbox>-->

</Window>