<Window x:Class="ProDocEstimate.Customers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:ProDocEstimate"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Customers" 
				Height="750" Width="900">


	<Window.Resources>
		<Style TargetType="Label">
			<Setter Property="FontSize" Value="12" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
		</Style>
		<Style TargetType="Button">
			<Setter Property="Height" Value="24" />
			<Setter Property="Background" Value="LightGreen" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="FontSize" Value="10" />
			<Setter Property="Margin" Value="3" />
			<Setter Property="Padding" Value="5 0" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border CornerRadius="8" Background="Blue" BorderBrush="#ccc" BorderThickness="0,1,1,0" >
							<Border.Effect>
								<DropShadowEffect ShadowDepth="4" Direction="305" Color="DarkGray" />
							</Border.Effect>
							<ContentPresenter 
							 x:Name="contentPresenter"
							 ContentTemplate="{TemplateBinding ContentTemplate}" 
							 Content="{TemplateBinding Content}" 
							 HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
							 Margin="{TemplateBinding Padding}" 
							 VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Viewbox>

	<Grid Background="LightGray" >

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TabControl x:Name="tabPage" Grid.Row="0" FontSize="18" VerticalAlignment="Top" Height="720" Margin="5" >

			<TabItem Header="_Details" >

				<Grid>

					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Grid Background="#CCCEAD" Grid.Row="0" >

						<Grid.RowDefinitions>
							<RowDefinition Height="40" />
							<RowDefinition Height="24" />
							<RowDefinition Height="24" />
							<RowDefinition Height="24" />
							<RowDefinition Height="24" />
						</Grid.RowDefinitions>

						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="150" />
							<ColumnDefinition Width="150" />
							<ColumnDefinition Width="150" />
							<ColumnDefinition Width="150" />
							<ColumnDefinition Width="150" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Border 
					 Grid.Column="0"
					 CornerRadius="10" 
					 BorderThickness="2" 
					 HorizontalAlignment="Left"
					 Margin="0"
					 Padding="10 0"
					 Background="Purple" 
					 Height="40" Grid.ColumnSpan="2"
					 VerticalAlignment="Top"
					 Width="auto">

							<Label 
						 Content="Customer" 
						 Background="Purple"
						 Foreground="White"
						 Padding="5"
						 FontSize="14" 
						 HorizontalAlignment="Left" VerticalAlignment="Center"
						 Margin="2,0,0,0"  />

						</Border>

						<StackPanel Grid.Column="1" Orientation="Horizontal" Grid.ColumnSpan="5">
							<Button  IsEnabled="{Binding NotEditing}" Click="Button_Click" >
								<AccessText>_Add</AccessText>
							</Button>
							<Button IsEnabled="{Binding NotEditing}" Click="Button_Click_1" >
								<AccessText>_Edit</AccessText>
							</Button>
							<Button IsEnabled="{Binding Editing}" Click="Button_Click_2" >
								<AccessText>_Save</AccessText>
							</Button>
							<Button IsEnabled="{Binding Editing}" Click="Button_Click_3"  >
								<AccessText>_Cancel</AccessText>
							</Button>
							<Button x:Name="btnDelete" IsEnabled="{Binding NotEditing}" Click="btnDelete_Click" >
								<AccessText>_Delete</AccessText>
							</Button>
							<Button  IsEnabled="{Binding NotEditing}" >
								<AccessText>_Find</AccessText>
							</Button>
							<Button x:Name="cmdSelect" Click="cmdSelect_Click" Margin="750 0 0 0" >
								<AccessText>Se_lect</AccessText>
							</Button>
						</StackPanel>

						<Label Grid.Row="1" Grid.Column="1" Content="Name" HorizontalAlignment="Right" />
						<Label Grid.Row="2" Grid.Column="1" Content="Address" HorizontalAlignment="Right" />
						<Label Grid.Row="3" Grid.Column="1" Content="City, State, ZIP" HorizontalAlignment="Right" />
						<Label Grid.Row="4" Grid.Column="1" Content="Contact" HorizontalAlignment="Right" />
						<Label Grid.Row="4" Grid.Column="3" Content="Phone" HorizontalAlignment="Left" Margin="90 0 0 0" />

						<TextBox x:Name="txtCustomerName" Grid.Row="1" Grid.Column="2" Width="447" 
					 Text="State of Alabama" Height="20" 
					 Style="{StaticResource TextField}"
					 HorizontalAlignment="Left" Grid.ColumnSpan="3" />
						<TextBox x:Name="txtAddress"      Style="{StaticResource TextField}"
					Grid.Row="2" Grid.Column="2" Width="550" Grid.ColumnSpan="3" Text="202 Main Street"  Height="20" />
						<TextBox x:Name="txtCity"         Style="{StaticResource TextField}" HorizontalAlignment="Left" 
					Grid.Row="3" Grid.Column="2" Width="170" Text="Montgomery"  Height="20"  Grid.ColumnSpan="2"  />
						<ComboBox x:Name="cmbState"       Grid.Row="3" Grid.Column="3" Width="42"  Margin="35,2,0,2" HorizontalAlignment="Left" Background="LightYellow"  Text="AL" Height="20" Foreground="Black"  >
							<ComboBoxItem Content="AK" />
							<ComboBoxItem Content="AL" />
							<ComboBoxItem Content="AR" />
						</ComboBox>
						<TextBox x:Name="txtZIP"          Style="{StaticResource TextField}"
					Grid.Row="3" Grid.Column="3" Width="95" Margin="85 0 0 0" Text="20214"  Height="20"  Grid.ColumnSpan="2" />
						<TextBox x:Name="txtContact"      Style="{StaticResource TextField}"
					Grid.Row="4" Grid.Column="2" Width="225" Text="George Raft"  Height="20"  Grid.ColumnSpan="2"  />
						<TextBox x:Name="txtPhone"        Style="{StaticResource TextField}"
					 Grid.Row="4" Grid.Column="4" Width="135" Text="(605) 761-1207"  Height="20"  Grid.ColumnSpan="2" />

					</Grid>

					<Grid Background="#CCCEBE" Grid.Row="1">

						<Grid.RowDefinitions>
							<RowDefinition Height="40" />
							<RowDefinition Height="24" />
							<RowDefinition Height="24" />
							<RowDefinition Height="24" />
							<RowDefinition Height="24" />
						</Grid.RowDefinitions>

						<Grid.ColumnDefinitions>
