					</Grid>

				</Grid>

			</TabItem>

			<TabItem Header="_Search" >

				<Grid>

					<Grid.RowDefinitions>
						<RowDefinition Height="40" />
						<RowDefinition Height="40" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Label Grid.Row="0" Content="FILTERS" HorizontalAlignment="Left" Margin="10 0 0 0" FontWeight="Bold" Foreground="Green" />

					<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10 0 0 0">
						<Label Content="Customer name: " />
						<TextBox x:Name="txtSearchCustomer" Width="150" Margin="0 6 0 6" Text="{Binding Path=SearchCustomer}" />
						<Label Content="Contact: " Margin="20 6 0 6"  />
						<TextBox x:Name="txtSearchContact"  Width="150" Margin="10 6 0 6" Text="{Binding Path=SearchContact}" />
						<Label Content="Other: " Margin="20 6 0 6"  />
						<TextBox x:Name="txtSearchOther"    Width="100" Margin="10 6 0 6" Text="{Binding Path=SearchOther}" />
						<Button x:Name="btnApply" Content="Apply filter" Margin="10 3 10 3" Width="90" FontWeight="Bold" FontSize="14" />
						<Button x:Name="btnClear" Content="Clear filter" Margin="0 3 110 3" Width="90" FontWeight="Bold" Click="btnClear_Click" FontSize="14" />
					</StackPanel>

					<DataGrid 
					 x:Name="MyGrid"
					 Grid.Row="2" 
					 Background="LightCyan" 
					 ColumnWidth="auto"
					 Width="870"
					 Margin="5"
					 ItemsSource="{Binding Custs.DefaultView}"
					 IsSynchronizedWithCurrentItem="True"
					 AutoGenerateColumns="False"  >
						<DataGrid.Columns>
							<DataGridTextColumn Header="Customer" Width="Auto" Binding="{Binding Path=Customer}" >
							</DataGridTextColumn>
							<DataGridTextColumn Header="Location" Width="Auto" Binding="{Binding Path=Location}" />
							<DataGridTextColumn Header="City" Width="Auto" Binding="{Binding Path=City}" />
							<DataGridComboBoxColumn Header="State" Width="50" TextBinding="{Binding Path=State}" />
							<DataGridTextColumn Header="Corp.Phone" Width="Auto" Binding="{Binding Path=CorpPhone}" />
							<DataGridTextColumn Header="Cont.Phone" Width="Auto" Binding="{Binding Path=ContPhone}" />
							<DataGridTextColumn Header="Contact" Width="Auto" Binding="{Binding Path=Contact}" />
							<DataGridCheckBoxColumn Header="Credit Hold" Width="100" />
							<DataGridTextColumn Header="Last Job" />
						</DataGrid.Columns>
					</DataGrid>
				</Grid>

			</TabItem>

		</TabControl>

	</Grid>

	</Viewbox>

