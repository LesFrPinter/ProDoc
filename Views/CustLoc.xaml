<Window x:Class="ProDocEstimate.Views.CustLoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProDocEstimate.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CustLoc" Height="550" Width="800">

	<Viewbox>

	<Grid Background="LightGray">

			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Grid Grid.Row="0" Grid.Column="0" >

				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="3*" />
					</Grid.RowDefinitions>

					<StackPanel Orientation="Horizontal" Margin="10">
						<Label Content="Company name:" FontSize="16" />
						<TextBox Style="{StaticResource TextField}" Width="300" />
					</StackPanel>

					<Label Content="ABC"	/>
				</Grid>


			</Grid>


		</Grid>

	</Viewbox>

</Window>